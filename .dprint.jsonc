{
  "indentWidth": 3,
  "lineWidth": 80,
  "newLineKind": "lf",
  "useTabs": true,
  "typescript": {
    "binaryExpression.operatorPosition": "sameLine",
    "quoteStyle": "preferSingle",
    "semiColons": "asi"
  },
  "includes": [
    "packages/*/{src,test}/**/*.{ts,cts,mts}"
  ],
  "excludes": [
    "**/node_modules",
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.90.5.wasm"
  ]
}
